generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  image       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  id         String   @id
  name       String
  username   String
  email      String
  bio        String   @default("")
  profilePic String
  links      Link[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

